{
    "name": "beta/bx.logger",
    "description": "PSR-3 logger for Bitrix app",
    "type": "bitrix-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Nesterov",
            "email": "alex19pov31@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "psr/log": "^1|^2|^3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.22"
    },
    "autoload": {
        "classmap": ["lib/"]
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 ./lib/",
        "analyze": "psalm --show-info=true"
    }
}
